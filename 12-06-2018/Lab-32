cat test.py 
#!/usr/bin/python

# INITIALIZE THE FUNCTION

def function_name(str):
	"This prints a passed string into this function"
	print(str)
	return;

# NOW CALL THE FUNCTION

function_name("I'm the one who met you!!!")
function_name("Again i am calling the function")

