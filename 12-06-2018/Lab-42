#!/usr/bin/python

# FUNCTION DEF 

def sum(arg1,arg2):
	
	total=arg1+arg2
	print("Inside the parameters and return them..")
	return total;		# IMP

# NOW CALL THE "sum" function

total=sum(10,20)
print("Outside the function: ", total)

